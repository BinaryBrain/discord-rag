{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "lib": ["esnext"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "dist",
  ]
}
